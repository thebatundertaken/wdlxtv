<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/background_dark"
    android:fitsSystemWindows="true"
    android:gravity="top|center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_final"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="center"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="50"
        android:background="@drawable/round_corners_bg2"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <com.osdmod.android.customviews.HorizontalPager
                android:id="@+id/horizontal_pager"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center">

                <ScrollView
                    android:id="@+id/sw_one"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/ly_one_swone"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="top"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_media"
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.0"
                            android:background="@drawable/round_corners_bg2"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:gravity="center_horizontal"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:padding="5dp"
                            android:scrollHorizontally="true"
                            android:shadowColor="@color/black"
                            android:shadowDx="1.0"
                            android:shadowDy="1.0"
                            android:shadowRadius="0.8"
                            android:singleLine="true"
                            android:text="@string/no_media_present"
                            android:textColor="@color/gray3"
                            android:textSize="18sp" />

                        <LinearLayout
                            android:id="@+id/ly_seekbar"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/layout_background3"
                            android:orientation="horizontal"
                            android:paddingEnd="2dp"
                            android:paddingStart="5dp"
                            android:paddingTop="8dp"
                            android:paddingBottom="8dp">

                            <TextView
                                android:id="@+id/txt_time_current"
                                android:layout_width="65dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:padding="2.0dip"
                                android:shadowColor="@color/black"
                                android:shadowDx="1.0"
                                android:shadowDy="1.0"
                                android:shadowRadius="0.8"
                                android:textColor="@color/white3" />

                            <SeekBar
                                android:id="@+id/sk_play"
                                style="@style/seekbar_ics_style"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.0"
                                android:max="255" />

                            <TextView
                                android:id="@+id/txt_time_total"
                                android:layout_width="65dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="start"
                                android:padding="2.0dip"
                                android:shadowColor="@color/black"
                                android:shadowDx="1.0"
                                android:shadowDy="1.0"
                                android:shadowRadius="0.8"
                                android:textColor="@color/white3" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/row_two_lyone_swone"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="20dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingStart="5dp"
                            android:paddingEnd="5dp"
                            android:paddingTop="3dip"
                            android:paddingBottom="5dip">

                            <ImageButton
                                android:id="@+id/btn_cvol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="5dp"
                                android:src="@drawable/cvol"
                                android:backgroundTint="@color/layout_background3"
                                android:visibility="gone" />

                            <ImageButton
                                android:id="@+id/btn_mode"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/layout_background4"
                                android:padding="5dp"
                                android:src="@drawable/rall" />

                            <SeekBar
                                android:id="@+id/sk_vol"
                                style="@style/seekbar_ics_style"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1.0"
                                android:progress="100"
                                android:visibility="invisible" />

                            <ImageButton
                                android:id="@+id/btn_vol"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/layout_background4"
                                android:padding="5dp"
                                android:minHeight="32.0dip"
                                android:src="@drawable/volh" />


                            <TextView
                                android:id="@+id/txt_vol"
                                android:layout_width="30.0dip"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:shadowColor="@color/black"
                                android:shadowDx="1.0"
                                android:shadowDy="1.0"
                                android:shadowRadius="0.8"
                                android:text="100"
                                android:textColor="@color/white"
                                android:visibility="gone" />
                        </LinearLayout>


                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:id="@+id/lay_one_row_three"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:paddingTop="3.0dip"
                                android:paddingBottom="3.0dip">

                                <ImageButton
                                    android:id="@+id/btn_rew"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:clickable="true"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/rew" />

                                <ImageButton
                                    android:id="@+id/btn_pplay"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:clickable="true"
                                    android:backgroundTint="@color/layout_background4"
                                    android:src="@drawable/pplay" />

                                <ImageButton
                                    android:id="@+id/btn_ff"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:clickable="true"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/ff" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lay_one_row_four"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/lay_one_row_three"
                                android:orientation="horizontal"
                                android:layout_marginStart="5dp"
                                android:layout_marginEnd="5dp"
                                android:paddingTop="3dip"
                                android:paddingBottom="3dip">

                                <ImageButton
                                    android:id="@+id/btn_prev"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:clickable="true"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/prev" />

                                <ImageButton
                                    android:id="@+id/btn_stop"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:clickable="true"
                                    android:backgroundTint="@color/layout_background4"
                                    android:src="@drawable/stop" />

                                <ImageButton
                                    android:id="@+id/btn_next"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:clickable="true"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/next" />
                            </LinearLayout>


                        </RelativeLayout>
                    </LinearLayout>
                </ScrollView>

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:gravity="center"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1.0"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="3.0dip"
                            android:paddingBottom="3.0dip">

                            <ImageButton
                                android:id="@+id/btn_wpower"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="50.0"
                                android:backgroundTint="@color/layout_background3"
                                android:src="@drawable/power" />

                            <ImageButton
                                android:id="@+id/btn_weject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="50.0"
                                android:backgroundTint="@color/layout_background3"
                                android:src="@drawable/eject" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="3.0dip"
                            android:paddingBottom="3.0dip">

                            <ImageButton
                                android:id="@+id/btn_wsearch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="50.0"
                                android:backgroundTint="@color/layout_background3"
                                android:src="@drawable/search" />

                            <ImageButton
                                android:id="@+id/btn_whome"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="50.0"
                                android:backgroundTint="@color/layout_background3"
                                android:src="@drawable/home" />
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:gravity="center"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip">

                    <LinearLayout
                        android:id="@+id/ly_two_swtwo"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingTop="3.0dip"
                            android:paddingBottom="3.0dip">

                            <ImageButton
                                android:id="@+id/btn_power"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:backgroundTint="@color/layout_background3"
                                android:src="@drawable/power" />

                            <ImageButton
                                android:id="@+id/btn_eject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:backgroundTint="@color/layout_background3"
                                android:src="@drawable/eject" />

                            <ImageButton
                                android:id="@+id/btn_search"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:backgroundTint="@color/layout_background3"
                                android:src="@drawable/search" />

                            <ImageButton
                                android:id="@+id/btn_home"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.0"
                                android:backgroundTint="@color/layout_background3"
                                android:src="@drawable/home" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/row_two_lytwo_swtwo"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="3.0dip"
                                android:paddingBottom="3.0dip">

                                <ImageButton
                                    android:id="@+id/btn_pgb"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/pgb" />

                                <ImageButton
                                    android:id="@+id/btn_config"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/config" />

                                <ImageButton
                                    android:id="@+id/btn_pgn"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/pgn" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingTop="3.0dip"
                                android:paddingBottom="3.0dip">

                                <ImageButton
                                    android:id="@+id/btn_audio"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:clickable="true"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/audio" />

                                <ImageButton
                                    android:id="@+id/btn_subs"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:clickable="true"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/subs" />

                                <ImageButton
                                    android:id="@+id/btn_mute"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:clickable="true"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/mute" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingTop="3.0dip"
                                android:paddingBottom="3.0dip">

                                <ImageButton
                                    android:id="@+id/btn_a"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:minWidth="30.0dip"
                                    android:minHeight="30.0dip"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/aa" />

                                <ImageButton
                                    android:id="@+id/btn_b"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/b" />

                                <ImageButton
                                    android:id="@+id/btn_c"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/c" />

                                <ImageButton
                                    android:id="@+id/btn_d"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1.0"
                                    android:backgroundTint="@color/layout_background3"
                                    android:src="@drawable/d" />
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </ScrollView>

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5.0dip"
                    android:layout_marginRight="5.0dip"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip">

                    <LinearLayout
                        android:id="@+id/ly_one_swfour"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </ScrollView>
            </com.osdmod.android.customviews.HorizontalPager>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/ly_dots"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_pos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:background="@android:color/transparent"
                    android:src="@drawable/one" />
            </LinearLayout>

            <ImageView
                android:id="@+id/img_led"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:paddingEnd="6.0dip"
                android:src="@android:color/background_dark" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_finalr"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="9dp"
        android:layout_weight="50"
        android:background="@drawable/round_corners_bg2"
        android:orientation="horizontal">

        <!--
        android:background="@color/remotecontroller_background"
        -->
        <RelativeLayout
            android:id="@+id/rl_arrows"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:paddingBottom="3.0dip">

            <ImageView
                android:id="@+id/img_gespa"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/touchpa" />

            <ImageButton
                android:id="@+id/btn_ok"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/btn_ok"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:baselineAlignBottom="true"
                android:scaleType="centerInside"
                android:src="@drawable/ok"
                tools:ignore="NotSibling" />

            <ImageButton
                android:id="@+id/btn_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/btn_ok"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:baselineAlignBottom="true"
                android:scaleType="centerInside"
                android:src="@drawable/up" />

            <ImageButton
                android:id="@+id/btn_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_ok"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:baselineAlignBottom="true"
                android:scaleType="centerInside"
                android:src="@drawable/left" />

            <ImageButton
                android:id="@+id/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@id/btn_ok"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:baselineAlignBottom="true"
                android:scaleType="centerInside"
                android:src="@drawable/right" />

            <ImageButton
                android:id="@+id/btn_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_ok"
                android:layout_centerHorizontal="true"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:baselineAlignBottom="true"
                android:scaleType="centerInside"
                android:src="@drawable/down" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/btn_down"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:backgroundTint="@color/layout_background3"
                android:src="@drawable/back" />

            <ImageButton
                android:id="@+id/btn_option"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/btn_down"
                android:layout_marginEnd="5dp"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/layout_background3"
                android:src="@drawable/option" />

            <ImageButton
                android:id="@+id/btn_touch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:background="@android:color/transparent"
                android:paddingTop="12.0dip"
                android:src="@drawable/ges" />

            <ImageButton
                android:id="@+id/btn_tinfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_menu_info_details"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>